# =========================
# BLOG WORDPRESS (fuera de Git)
# =========================
/blog/                                   # blog en raíz
/public_html/blog/                       # blog dentro de public_html
/blog/wp-content/uploads/                # medios del blog
/blog/wp-content/cache/                  # caché del blog
/public_html/blog/wp-content/uploads/    # medios si el blog vive en public_html
/public_html/blog/wp-content/cache/      # caché si el blog vive en public_html

# =========================
# ENTORNOS Y SECRETOS
# =========================
.env                                     # variables de entorno
.env.*                                   # variantes (.env.local, etc.)
*.pem                                    # llaves/SSL
*.key
*.crt
config/mercadopago.php                   # credenciales MP directas
config/mercadopago_*.php                 # variantes de MP
config/smtp.php                          # SMTP directo
config/smtp_*.php                        # variantes SMTP
config/*secret*.php                      # cualquier archivo con “secret”
config/*local*.php                       # configs locales no productivas

